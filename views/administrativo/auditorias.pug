      .container 
        table#example.display(style="width:100%")
          thead
            tr
              th Usuario
              th Operacion
              th Fecha/Hora
              th Valor antiguo
              th Valor nuevo
              th tabla
          if auditorias
            tbody
              each auditoria in auditorias
                tr
                  td= auditoria.dataValues.usuarioId
                  td= auditoria.dataValues.operacion ? auditoria.dataValues.operacion : '-'
                  td= auditoria.dataValues.fechaHora ? auditoria.dataValues.fechaHora : '-'
                  td= auditoria.dataValues.id
                  td= auditoria.dataValues.id
                  td= auditoria.dataValues.tablaAfectada ? auditoria.dataValues.tablaAfectada : '-'

          tfoot
            tr
              th Usuario
              th Examenes
              th Fecha/Hora
              th Valor antiguo
              th Valor nuevo
              th tabla
              
      
